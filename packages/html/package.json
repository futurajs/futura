{
  "name": "@futura/html",
  "version": "0.4.0-alpha.2",
  "description": "Virtual DOM based HTML implementation for futura",
  "keywords": [
    "elm",
    "tea",
    "flux",
    "fsm",
    "redux",
    "state",
    "state-machine",
    "ui",
    "virtual-dom"
  ],
  "author": "Ali Sabil <ali.sabil@gmail.com>",
  "homepage": "https://github.com/futurajs/futura",
  "license": "Apache-2.0",
  "main": "lib.cjs/index.js",
  "module": "lib.esm/index.js",
  "types": "types/index.d.ts",
  "files": [
    "lib.cjs",
    "lib.esm",
    "types"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/futurajs/futura.git"
  },
  "scripts": {
    "prepare": "npm run build",
    "prebuild": "rimraf lib.cjs/ lib.esm/ types/",
    "build": "npm-run-all -p build:*",
    "build:cjs": "tsc --target es5 --module commonjs --outDir lib.cjs",
    "build:esm": "tsc --target es5 --module es2015 --outDir lib.esm",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir types",
    "test": "jest"
  },
  "bugs": {
    "url": "https://github.com/futurajs/futura/issues"
  },
  "dependencies": {
    "@futura/virtual-dom": "^0.4.0-alpha.1"
  },
  "peerDependencies": {
    "tslib": "*"
  },
  "devDependencies": {
    "jest": "^23.6.0",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-language-service": "angelozerr/tslint-language-service#3c6e13e7ee219968af2df6130fd8b57742c9ae74",
    "typedoc": "^0.12.0",
    "typescript": "^3.2.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
