{
  "name": "@futura/core",
  "version": "0.4.0-alpha.4",
  "description": "Modern state-machine based approach for building javascript/typescript applications",
  "keywords": [
    "elm",
    "tea",
    "flux",
    "fsm",
    "redux",
    "state",
    "state-machine",
    "ui",
    "virtual-dom"
  ],
  "author": "Ali Sabil <ali.sabil@gmail.com>",
  "homepage": "https://github.com/futurajs/futura",
  "license": "Apache-2.0",
  "main": "lib.cjs/index.js",
  "module": "lib.esm/index.js",
  "types": "types/index.d.ts",
  "files": [
    "lib.cjs",
    "lib.esm",
    "types"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/futurajs/futura.git"
  },
  "scripts": {
    "prepare": "npm run build",
    "prebuild": "rimraf lib.cjs/ lib.esm/ types/",
    "build": "npm-run-all -p build:*",
    "build:cjs": "tsc --target es5 --module commonjs --outDir lib.cjs",
    "build:esm": "tsc --target es5 --module es2015 --outDir lib.esm",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir types",
    "test": "jest"
  },
  "bugs": {
    "url": "https://github.com/futurajs/futura/issues"
  },
  "dependencies": {
    "fast-deep-equal": "^2.0.1"
  },
  "devDependencies": {
    "jest": "^23.6.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.4",
    "typescript": "^3.2.4"
  },
  "peerDependencies": {
    "tslib": "*"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
